#include <stdio.h>

int factorial(int num) {
	int fact = 1;
	for (int i = 1; i <= num; i++) {
		fact *= i;
	}
	return fact;
}

int main() {
	int n, sum = 0;
	printf("Ingrese un valor de n: ");
	scanf("%d", &n);
	for (int i = 1; i <= n; i++) {
		sum += factorial(i);
	}
	printf("La suma de los factoriales de 1 a %d es: %d\n", n, sum);
	return 0;
}
